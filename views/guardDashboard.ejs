<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/styles.css" rel="stylesheet">
    <title>Guard Dashboard</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Guard Dashboard</h1>
            <% if (userId) { %>
                <div class="user-info">
                    <p>Welcome, <%= user ? user.name : 'Guard' %>!</p>
                    <p class="user-id">ID: <%= userId %></p>
                </div>
            <% } %>
        </div>

        <!-- Prompt to complete profile -->
        <% if (user && !user.contact_number) { %>
            <div class="alert-warning" role="alert">
                <p><strong>Complete Your Profile</strong></p>
                <p>Please update your profile with your contact number to continue.</p>
            </div>
        <% } %>

        <div class="grid-container">
            <!-- Scan QR Section -->
            <section id="scan-qr" class="card">
                <h2>Scan Visitor QR Code</h2>
                <div id="qr-reader" style="width: 100%;"></div>
                <form id="scan-form" action="/api/v1/guard/scan-qr" method="POST">
                    <div>
                        <label for="qrId">QR Code ID:</label>
                        <input type="text" id="qrId" name="qrId" placeholder="Enter QR ID manually" required>
                        <input type="hidden" name="guardId" value="<%= userId %>">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Scan</button>
                </form>
            </section>

            <!-- Update Profile Section -->
            <section id="update-profile" class="card">
                <h2>Update Your Profile</h2>
                <form action="/api/v1/users/update-details" method="POST">
                    <% if (userId) { %>
                        <input type="hidden" name="userId" value="<%= userId %>">
                        <input type="hidden" name="userType" value="guard">
                    <% } %>
                    <input type="text" name="name" placeholder="New Name">
                    <input type="tel" name="contact_number" placeholder="New Contact Number">
                    <button type="submit" class="btn btn-success">Update Profile</button>
                </form>
            </section>
        </div>
    </div>
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
    <script>
        function onScanSuccess(decodedText, decodedResult) {
            // handle the scanned code as you like, for example:
            console.log(`Code matched = ${decodedText}`, decodedResult);
            
            // Set the value in the input field
            document.getElementById('qrId').value = decodedText;
            
            // Optionally, submit the form automatically
            document.getElementById('scan-form').submit();
        }

        function onScanFailure(error) {
            // handle scan failure, usually better to ignore and keep scanning.
            // console.warn(`Code scan error = ${error}`);
        }

        document.addEventListener('DOMContentLoaded', () => {
            let html5QrcodeScanner = new Html5QrcodeScanner(
                "qr-reader",
                { fps: 10, qrbox: {width: 250, height: 250} },
                /* verbose= */ false);
            html5QrcodeScanner.render(onScanSuccess, onScanFailure);
        });
    </script>
</body>
</html>
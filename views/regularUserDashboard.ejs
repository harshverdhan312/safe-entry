<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/styles.css" rel="stylesheet">
    <title>User Dashboard</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Your Dashboard</h1>
            <% if (userId) { %>
                <div class="user-info">
                    <p>Welcome, <%= user ? user.name : 'User' %>!</p>
                    <p class="user-id">ID: <%= userId %></p>
                </div>
            <% } %>
        </div>

        <!-- Prompt to complete profile -->
        <% if (user && (!user.contactNumber || !user.place)) { %>
            <div class="alert-warning" role="alert">
                <p><strong>Complete Your Profile</strong></p>
                <p>Please update your profile with your contact number and place to continue.</p>
            </div>
        <% } %>

        <div class="grid-container">
            <!-- Create QR Section -->
            <section id="create-qr" class="card">
                <h2>Create a New QR Code</h2>
                <form action="/api/v1/regular/create-qr" method="POST">
                    <!-- Assuming userId is handled on the backend via session/JWT -->
                    <button type="submit" class="btn btn-primary">Generate QR Code</button>
                </form>
            </section>

            <!-- Visitor Count Section -->
            <section id="visitor-count" class="card text-center">
                <h2>Total Visitors Scanned</h2>
                <p class="visitor-count">
                    <%= user && user.numberOfVisitors ? user.numberOfVisitors : 0 %>
                </p>
            </section>


            <!-- Download QR Section -->
            <section id="download-qr" class="card">
                <h2>Your QR Code</h2>
                <p>Your new QR code will be displayed here for download.</p>
                <!-- Example: <img src="path/to/qr-code.png" alt="Your QR Code" class="mt-4 border rounded-md"> -->
            </section>

            <!-- Update Profile Section -->
            <section id="update-profile" class="card">
                <h2>Update Your Profile</h2>
                <form action="/api/v1/users/update-details" method="POST">
                    <% if (userId) { %>
                        <input type="hidden" name="userId" value="<%= userId %>">
                        <input type="hidden" name="userType" value="regular">
                    <% } %>
                    <input type="text" name="name" placeholder="New Name">
                    <input type="tel" name="contactNumber" placeholder="Contact Number">
                    <input type="text" name="place" placeholder="Place / Address">
                    <button type="submit" class="btn btn-success">Update Profile</button>
                </form>
            </section>
        </div>
    </div>
</body>
</html>
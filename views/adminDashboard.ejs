<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/styles.css" rel="stylesheet">
    <title>Admin Dashboard</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Admin Dashboard</h1>
            <% if (userId) { %>
                <div class="user-info">
                    <p>Welcome, <%= user ? user.name : 'Admin' %>!</p>
                    <p class="user-id">ID: <%= userId %></p>
                </div>
            <% } %>
        </div>

        <% if (newUser) { %>
            <div class="alert-info">
                <p><strong>New <%= newUser.newUserType %> Created!</strong></p>
                <p>Name: <%= newUser.newUserName %></p>
                <p>ID: <%= newUser.newUserId %></p>
                <p>Password: <%= newUser.newUserPass %></p>
            </div>
        <% } %>

        <div class="grid-container">
            <!-- Create Regular User Section -->
            <section id="create-user" class="card">
                <h2>Create Regular User</h2>
                <form id="create-user-form" action="/api/v1/admin/create-user" method="POST">
                    <% if (user) { %>
                        <input type="hidden" name="adminId" value="<%= user._id %>">
                    <% } %>
                    <input type="text" name="name" placeholder="Full Name" required>
                    <input type="password" name="password" placeholder="Password" required>
                    <button type="submit" class="btn btn-primary">Create User</button>
                </form>
            </section>

            <!-- Create Guard Section -->
            <section id="create-guard" class="card">
                <h2>Create Guard</h2>
                <form id="create-guard-form" action="/api/v1/admin/create-guard" method="POST">
                    <% if (user) { %>
                        <input type="hidden" name="adminId" value="<%= user._id %>">
                    <% } %>
                    <input type="text" name="name" placeholder="Full Name" required>
                    <input type="password" name="password" placeholder="Password" required>
                    <button type="submit" class="btn btn-primary">Create Guard</button>
                </form>
            </section>

            <!-- Update Profile Section -->
            <section id="update-profile" class="card">
                <h2>Update Your Profile</h2>
                <form action="/api/v1/users/update-details" method="POST">
                    <% if (userId) { %>
                        <input type="hidden" name="userId" value="<%= userId %>">
                        <input type="hidden" name="userType" value="admin">
                    <% } %>
                    <input type="text" name="name" placeholder="New Name">
                    <input type="email" name="email" placeholder="New Email">
                    <button type="submit" class="btn btn-success">Update Profile</button>
                </form>
            </section>
            
        </div>
    </div>
</body>
</html>